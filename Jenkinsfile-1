pipeline{
    agent any
    tools{nodejs "node"}
    stages {
        stage("Cloning Repo"){
            steps{
                script{
                    git branch: 'main',
                    url: 'https://github.com/pandianh/M324_trafficlight.git'
                }
            }
        }
        stage('install jest-cli'){
            steps{
                sh 'npm install jest-cli -g'
            }
        }
        
        stage('install dependencies'){
            steps{
                sh 'npm install'
            }
        }
        
        stage('Test'){
            steps{
                sh 'npm test'
            }
        }
    }
}
